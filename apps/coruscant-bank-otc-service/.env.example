# Environment variables for Coruscant Bank OTC Service

# Service configuration
PORT=3001
LIQUIDATION_SERVICE_URL=http://liquidation-service:4000

# LocalStack endpoints and AWS credentials
AWS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# SNS/SQS Resources
LOAN_EVENTS_TOPIC=coruscant-bank-loan-events
LOAN_QUEUE_NAME=coruscant-bank-loan-queue

# OpenAPI configuration
OPENAPI_PATH=/api-docs

# Client Simulator Configuration
SIMULATOR_MAX_CLIENTS=10
SIMULATOR_ACTION_INTERVAL_MS=1000
SIMULATOR_AUTO_START=true
PRICE_SERVICE_API_ENDPOINT=

# Logging and Event Storage
LOG_LEVEL=info
EVENT_LOG_PATH=./logs/events.log
MAX_IN_MEMORY_EVENTS=1000

# Publishing Configuration
# When true, the OTC service will publish events to SNS, simulating the liquidation service
# When false (default), it only forwards events to the actual liquidation service via HTTP
ENABLE_SELF_PUBLISHING=false
