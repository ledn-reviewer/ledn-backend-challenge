{
  "name": "coruscant-bank-otc-service",
  "version": "1.0.0",
  "description": "Coruscant Bank OTC Service",
  "license": "ISC",
  "author": "Coruscant Bank",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint --flag unstable_config_lookup_from_file .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testMatch='**/src/**/*.spec.ts'",
    "test:integration": "cucumber-js",
    "test:integration:api": "cucumber-js --profile api-only",
    "test:integration:comprehensive": "cucumber-js --profile comprehensive",
    "test:integration:self-contained": "cucumber-js --profile self-contained",
    "test:coverage": "jest --coverage",
    "depcheck": "depcheck",
    "docker:build": "docker build -t coruscant-bank-otc-service:latest .",
    "docker:build:tagged": "docker build -t coruscant-bank-otc-service:$(date +%Y%m%d-%H%M%S) .",
    "docker:run": "docker run -p 3001:3000 -e SIMULATOR_AUTO_START=true -e SIMULATOR_MAX_CLIENTS=5 coruscant-bank-otc-service:latest",
    "docker:build:run": "npm run docker:build && npm run docker:run",
    "docker:compose:build": "cd ../../ && docker-compose build coruscant-bank-otc-service",
    "docker:compose:up": "cd ../../ && docker-compose up -d coruscant-bank-otc-service",
    "docker:compose:logs": "cd ../../ && docker-compose logs -f coruscant-bank-otc-service"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.350.0",
    "@aws-sdk/client-sqs": "^3.823.0",
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.4.0",
    "d3": "^7.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^3.14.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.2",
    "zod": "^3.25.50"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@types/chai": "^5.2.2",
    "@types/cucumber": "^6.0.1",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.57",
    "@types/supertest": "^6.0.3",
    "chai": "^5.2.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "testcontainers": "^11.0.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
